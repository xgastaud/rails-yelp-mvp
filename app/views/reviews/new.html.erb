<div class="navbar">
  <%= link_to "Home", restaurants_path %> | <%= link_to "Add new", new_restaurant_path %>
</div>
<h3>Restaurant <%= @restaurant.name %> review</h3>
<hr>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>

